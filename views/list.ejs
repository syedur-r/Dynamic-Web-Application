	<head>     
		<title>Book List</title>   
	</head>     
	<h1 style="font-family:sans-serif;font-size:50px;"> This is the Book List Page </h1>           
	<body>             
		<h3 style="font-family:sans-serif;font-size:25px;">You can see names and prices of all available books at our book shop here:</h3>             
		<ul>               
			<% availablebooks.forEach(function(book){ %>               
			<li style="font-family:sans-serif;font-size:20px;"><%= book.name %>, Â£<%= book.price %></li>              
			<% }) %>             
		</ul>
		<button type="button" onclick="darkMode()">Dark Mode</button>
		<button type="button" onclick="lightMode()">Light Mode</button>
		
